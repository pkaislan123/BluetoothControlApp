<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="155dp"
                android:layout_height="383dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imgBtnPreDefinido"
                    android:layout_width="154dp"
                    android:layout_height="154dp"
                    app:srcCompat="@drawable/btnoff" />

                <ImageButton
                    android:id="@+id/imgBtnSeta"
                    android:layout_width="154dp"
                    android:layout_height="154dp"
                    app:srcCompat="@drawable/btnseta2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/spinnerTipoBtnPreDefinido"
                    android:layout_width="match_parent"
                    android:layout_height="57dp" />

                <CheckBox
                    android:id="@+id/checkBoxBtntp1"
                    android:layout_width="match_parent"
                    android:layout_height="83dp"
                    android:onClick="checkTipoBotaoPredefinido"
                    android:checked="true"
                    android:text="Selecionar" />

                <TextView
                    android:id="@+id/textView40"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <CheckBox
                    android:id="@+id/checkeckBoxBtnSeta"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"

                    android:checked="false"
                    android:onClick="checkTipoBotaoPredefinido"
                    android:text="Selecionar" />

                <Spinner
                    android:id="@+id/spinnerDirecaoSeta"
                    android:layout_width="match_parent"
                    android:layout_height="47dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:visibility="visible">

        <TextView
            android:id="@+id/textView50"
            android:layout_width="200dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btnFinalizarAddNewButton"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Finalizar" />
    </LinearLayout>


</LinearLayout>