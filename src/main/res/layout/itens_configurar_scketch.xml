<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView53"
                android:layout_width="122dp"
                android:layout_height="wrap_content"
                android:text="Componente:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView54"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:text="Tipo:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView56"
                android:layout_width="122dp"
                android:layout_height="45dp"
                android:text="Pino:" />

            <TextView
                android:id="@+id/textView57"
                android:layout_width="128dp"
                android:layout_height="38dp"
                android:text="Tipo para Arduino:" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itens_configurar_scketch_nome_componente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/itens_configurar_scketch_tipo_componente"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:text="Tipo" />

            <EditText
                android:id="@+id/itens_configurar_scketch_pino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name" />

            <Spinner
                android:id="@+id/itens_configurar_scketch_spinner_tipo_arduino"
                android:layout_width="match_parent"
                android:layout_height="36dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>